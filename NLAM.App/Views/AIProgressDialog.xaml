<Window x:Class="NLAM.App.Views.AIProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Task Progress"
        Width="600" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="#252526" BorderBrush="#3E3E42" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8,8,0,0" Padding="15,10"
                    MouseDown="TitleBar_MouseDown">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ¤–" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock x:Name="TitleText" Text="AI Task Running..." 
                                   Foreground="White" FontSize="14" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock x:Name="ModelText" Text="Model: llama3.2" 
                               Foreground="#888888" FontSize="11"
                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Log Area -->
            <Border Grid.Row="1" Margin="15,10,15,5" Background="#1E1E1E" 
                    CornerRadius="4" BorderBrush="#3E3E42" BorderThickness="1">
                <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="10">
                    <TextBlock x:Name="LogTextBlock" 
                               FontFamily="Consolas" FontSize="12"
                               Foreground="#D4D4D4" TextWrapping="Wrap"
                               Text="Initializing..."/>
                </ScrollViewer>
            </Border>

            <!-- Progress Bar -->
            <Grid Grid.Row="2" Margin="15,5">
                <ProgressBar x:Name="ProgressBar" Height="4" 
                             Background="#3E3E42" Foreground="#007ACC"
                             IsIndeterminate="True"/>
            </Grid>

            <!-- Status and Cancel Button -->
            <Grid Grid.Row="3" Margin="15,5,15,15">
                <TextBlock x:Name="StatusText" Text="Processing..." 
                           Foreground="#888888" FontSize="11"
                           VerticalAlignment="Center"/>
                <Button x:Name="CancelButton" Content="Cancel" 
                        HorizontalAlignment="Right"
                        Padding="20,8"
                        Click="CancelButton_Click"
                        Style="{StaticResource {x:Type Button}}"
                        Background="#D13438" Foreground="White"
                        BorderThickness="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
